<decorators defaultdir="/WEB-INF/jsp/decorators">
  <excludes>
    <pattern>/index.jsp</pattern>
    <pattern>/secure/doc/*</pattern>
    <pattern>/secure/site/*</pattern>
  </excludes>
  <decorator name="default" page="/WEB-INF/jsp/decorators/layout.jsp">
    <pattern>/secure/*</pattern>
    <!-- scheint nicht bei error-handler zu funktionieren -->
    <pattern>/error.jsp</pattern>
  </decorator>
</decorators>
