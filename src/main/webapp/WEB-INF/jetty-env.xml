<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">

<Configure id="ProjectForge" class="org.eclipse.jetty.webapp.WebAppContext">
  <New id="ProjectForgeDS" class="org.eclipse.jetty.plus.jndi.Resource">
    <Arg><Ref id="ProjectForge"/></Arg>
    <Arg>jdbc/ProjectForgeDS</Arg>
    <Arg>
      <New class="org.apache.commons.dbcp.BasicDataSource">
        <Set name="driverClassName">org.hsqldb.jdbcDriver</Set>
        <Set name="url">
          jdbc:hsqldb:<SystemProperty name="jetty.home" />/database/ProjectForgeDB
        </Set>
        <Set name="username">sa</Set>
        <Set name="password"></Set>
        <Set name="maxActive">100</Set>
      </New>
    </Arg>
  </New>
</Configure>